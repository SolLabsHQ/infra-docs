{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sollabshq.com/schemas/normalized_document.schema.json",
  "title": "NormalizedDocument",
  "type": "object",
  "additionalProperties": false,
  "required": ["doc_id", "url", "final_url", "retrieved_at", "content_type", "text"],
  "properties": {
    "doc_id": { "type": "string", "minLength": 1 },
    "url": { "type": "string", "minLength": 1 },
    "final_url": { "type": "string", "minLength": 1 },
    "retrieved_at": { "type": "string", "format": "date-time" },

    "content_type": { "type": "string", "minLength": 1 },

    "title": { "type": "string" },
    "published_at": { "type": "string", "format": "date-time" },

    "source_domain": { "type": "string", "minLength": 1 },

    "text": { "type": "string", "minLength": 1 },

    "anchors": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "pdf_pages": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["page", "start_char"],
            "properties": {
              "page": { "type": "integer", "minimum": 1 },
              "start_char": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    }
  }
}