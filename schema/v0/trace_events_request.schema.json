{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sollabshq.com/schemas/v0/trace_events_request.schema.json",
  "title": "TraceEventsRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["requestId", "localUserUuid", "events"],
  "properties": {
    "requestId": { "type": "string", "minLength": 1 },
    "localUserUuid": { "type": "string", "minLength": 1 },
    "events": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          { "$ref": "https://sollabshq.com/schemas/v0/journal_offer_event.schema.json" },
          { "$ref": "https://sollabshq.com/schemas/v0/device_muse_observation.schema.json" }
        ]
      }
    }
  }
}
