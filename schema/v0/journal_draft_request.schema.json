{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sollabshq.com/schemas/v0/journal_draft_request.schema.json",
  "title": "JournalDraftRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["requestId", "threadId", "mode", "evidenceSpan"],
  "properties": {
    "requestId": { "type": "string", "minLength": 1 },
    "threadId": { "type": "string", "minLength": 1 },
    "mode": { "type": "string", "enum": ["verbatim", "assist"] },
    "evidenceSpan": { "$ref": "#/$defs/EvidenceSpan" },
    "cpbRefs": {
      "type": "array",
      "items": { "$ref": "#/$defs/CpbRef" },
      "default": []
    },
    "preferences": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "maxLines": { "type": "integer", "minimum": 1, "maximum": 50 },
        "includeTagsSuggested": { "type": "boolean", "default": true }
      }
    }
  },
  "$defs": {
    "EvidenceSpan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["startMessageId", "endMessageId"],
      "properties": {
        "startMessageId": { "type": "string", "minLength": 1 },
        "endMessageId": { "type": "string", "minLength": 1 }
      }
    },
    "CpbRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cpbId"],
      "properties": {
        "cpbId": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["journalStyle"] }
      }
    }
  }
}
