{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sollabshq.com/schemas/v0/journal_entry.schema.json",
  "title": "JournalEntry",
  "type": "object",
  "additionalProperties": false,
  "required": ["entryId", "createdTs", "title", "body", "tags", "sourceSpan", "draftMeta"],
  "properties": {
    "entryId": { "type": "string", "minLength": 1 },
    "createdTs": { "type": "string", "format": "date-time" },
    "title": { "type": "string", "minLength": 1, "maxLength": 200 },
    "body": { "type": "string", "minLength": 1, "maxLength": 20000 },
    "tags": {
      "type": "array",
      "items": { "$ref": "#/$defs/Tag" },
      "default": []
    },
    "sourceSpan": { "$ref": "#/$defs/SourceSpan" },
    "draftMeta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode"],
      "properties": {
        "mode": { "type": "string", "enum": ["assist", "verbatim"] },
        "cpbId": { "type": "string", "minLength": 1 },
        "draftId": { "type": "string", "minLength": 1 }
      }
    }
  },
  "$defs": {
    "Tag": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9_\\- ]*$"
    },
    "SourceSpan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["threadId", "startMessageId", "endMessageId"],
      "properties": {
        "threadId": { "type": "string", "minLength": 1 },
        "startMessageId": { "type": "string", "minLength": 1 },
        "endMessageId": { "type": "string", "minLength": 1 }
      }
    }
  }
}
