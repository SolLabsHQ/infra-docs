{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sollabshq.com/schemas/v0/journal_draft_envelope.schema.json",
  "title": "JournalDraftEnvelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "draftId", "threadId", "mode", "title", "body", "sourceSpan", "meta"],
  "properties": {
    "type": { "const": "JournalDraftEnvelope" },
    "draftId": { "type": "string", "minLength": 1 },
    "threadId": { "type": "string", "minLength": 1 },
    "mode": { "type": "string", "enum": ["verbatim", "assist"] },
    "title": { "type": "string", "minLength": 1, "maxLength": 200 },
    "body": { "type": "string", "minLength": 1, "maxLength": 20000 },
    "tagsSuggested": {
      "type": "array",
      "items": { "$ref": "#/$defs/Tag" },
      "default": []
    },
    "sourceSpan": { "$ref": "#/$defs/SourceSpan" },
    "meta": { "$ref": "#/$defs/DraftMeta" }
  },
  "$defs": {
    "Tag": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9_\\- ]*$"
    },
    "SourceSpan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["threadId", "startMessageId", "endMessageId"],
      "properties": {
        "threadId": { "type": "string", "minLength": 1 },
        "startMessageId": { "type": "string", "minLength": 1 },
        "endMessageId": { "type": "string", "minLength": 1 }
      }
    },
    "DraftMeta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["usedCpbIds", "assumptions", "unknowns", "evidenceBinding"],
      "properties": {
        "usedCpbIds": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        },
        "assumptions": {
          "type": "array",
          "items": { "$ref": "#/$defs/Note" },
          "default": []
        },
        "unknowns": {
          "type": "array",
          "items": { "$ref": "#/$defs/Note" },
          "default": []
        },
        "evidenceBinding": {
          "type": "object",
          "additionalProperties": false,
          "required": ["sourceSpan", "nonInvention"],
          "properties": {
            "sourceSpan": { "$ref": "#/$defs/SourceSpan" },
            "nonInvention": { "type": "boolean" }
          }
        }
      }
    },
    "Note": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "text"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "text": { "type": "string", "minLength": 1, "maxLength": 2000 }
      }
    }
  }
}
